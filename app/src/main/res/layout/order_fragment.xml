<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.webronin_26.online_mart_retailer.order.OrderViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".order.OrderFragment">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="訂單資訊"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:text="訂單編號" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/order_fragment_text_view_number"
                android:text="@{viewmodel.orderTextViewNumber}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_marginBottom="20dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:text="訂單地址" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/order_fragment_text_view_address"
                android:text="@{viewmodel.orderTextViewAddress}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_marginBottom="30dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:text="訂單明細" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/order_fragment_text_view_product_list"
                android:text="@{viewmodel.orderTextViewProductList}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_marginBottom="30dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:text="訂單金額" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/order_fragment_text_view_price"
                app:set_text_view_float="@{viewmodel.orderTextViewPrice}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_marginBottom="30dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:text="付款時間" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/order_fragment_text_view_paid_time"
                android:text="@{viewmodel.orderTextViewPaidTime}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_marginBottom="30dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/order_fragment_cancel_button"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="確認"
                android:textSize="30sp"
                android:background="@drawable/white_rounded_corner"
                android:layout_weight="1"
                android:layout_margin="20dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>
</layout>